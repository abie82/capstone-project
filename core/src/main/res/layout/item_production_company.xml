<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="elok.dicoding.made.core.domain.model.ProducationCompany" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_side_margin"
        android:layout_marginVertical="@dimen/card_side_margin"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:contentDescription="@string/production_company"
                app:imageUrl="@{ item.logoPath }"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tintMode="src_in"
                tools:src="@drawable/ic_loading" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{ item.name }"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:text="@string/production_company" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>